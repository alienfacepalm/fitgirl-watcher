{
  "manifest_version": 2,
  "name": "FitGirl Repacks Watchlist",
  "version": "1.0.0",
  "description": "Add games from FitGirl repacks to your watchlist with reminders",
  "permissions": [
    "storage",
    "activeTab",
    "notifications",
    "alarms",
    "*://fitgirl-repacks.site/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://fitgirl-repacks.site/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "FitGirl Watchlist"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "applications": {
    "gecko": {
      "id": "fitgirl-watchlist@example.com",
      "strict_min_version": "78.0"
    }
  }
}
